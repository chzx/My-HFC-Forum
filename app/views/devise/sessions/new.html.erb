<div id="landing-page-content" class="container-fluid">
  <div class="row landing-page-content-row">
    <div class="col-md-4 col-md-offset-4">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Sign in</h1>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', :placeholder => 'Email' %>
        </div>
        <div class="form-group">
          <div class="input-group with-q-mark">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Password' %>
            <span class="input-group-btn">
              <%= link_to '', :class=>'btn btn-default stupidquestionicon'  do %>
                <img src="<%=image_url('forgot_password.png')%>" style="height:20px; margin-right:-30px; position: absolute; right:35px; ">
              <% end %>
            </span>
          </div>
        </div>
        <div class="form-group log-in">
          <%= f.submit 'Log In', :class=>'btn btn-secondary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div id="landing-page-footer" class="container-fluid">
  <div class="row">
    <div class="col-md-1 text-right alert-icon-columns">
      <%= image_tag 'notice.png', :id=>'notice-icon' %>
    </div>
    <div class="col-md-7 description-columns">
      <p>
        This forum is only for current and past students of HFC Technology Academy.
        <br>
        If you would like more information on the academy or to join our mailing list, please click here.
      </p>
      <p>&copy; 2014 HFC Alumni Forum All Rights Reserved.</p>
    </div>
    <div class="col-md-3 text-right hfc-academy-icon-columns">
      <%= image_tag 'forum_logo_lrg.png', :id=>'hfc-academy-logo' %>
    </div>
  </div>
</div>
